# Server Configuration
# Port for the Express server (default: 4173)
PORT=4173

# Environment mode (development, production)
NODE_ENV=production

# Database Configuration
# MySQL connection string format: mysql://username:password@host:port/database
# Example: mysql://user:pass@localhost:3306/recruitment_pass
DATABASE_URL=mysql://username:password@host:3306/recruitment_pass

# AWS S3 Configuration (Optional - for file uploads)
# If your app uses file storage, configure these variables
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name

# Email Configuration (Optional - if using email notifications)
# Add your SMTP or email service provider credentials
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your_email@example.com
# SMTP_PASSWORD=your_password
# SMTP_FROM=noreply@baynunah.ae

# Admin Configuration
# Admin email address for the system
ADMIN_EMAIL=mohammad.sudally@baynunah.ae

# CORS Configuration (Optional)
# Comma-separated list of allowed origins
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# API Base URL (Optional - for frontend API calls)
# Only needed if frontend is on different domain
# VITE_API_BASE=https://api.yourdomain.com

# Session/JWT Configuration (if applicable)
# JWT_SECRET=your_jwt_secret_key_here
# SESSION_SECRET=your_session_secret_key_here

# Logging Configuration (Optional)
# LOG_LEVEL=info
